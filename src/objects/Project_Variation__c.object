<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Add_additional_info_if_added_Appr_Manag</fullName>
        <active>true</active>
        <description>User must add Description and Additional Cost Budget if added Approval Manager</description>
        <errorConditionFormula>AND(
  NOT(
    ISBLANK( Approving_Manager__c )
  ),
  OR(
    ISBLANK( Description__c ),
    ISBLANK( Additional_Cost_Budget__c )
  )
)</errorConditionFormula>
        <errorMessage>Please enter Additional Cost / Budget and Description before adding the Approval Manager</errorMessage>
    </validationRules>
</CustomObject>
